<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kw.smartbebe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="19" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/smartbebe_icon"
        android:label="@string/app_name">
        <activity
            android:name="com.smartbebe.Activity_Main"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.smartbebe.Activity_Start"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartbebe.Activity_Signup"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.smartbebe.diary.Activity_DiaryWrite"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.smartbebe.diary.ViewCalendar"
            android:theme="@style/Dialog" >
        </activity>
        <activity
            android:name="com.smartbebe.policy.Activity_PolicyDetail"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
    </application>

</manifest>
