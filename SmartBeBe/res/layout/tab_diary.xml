<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <ListView
        android:id="@+id/diary_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/diary_btn_linearlayout"
        android:layout_centerHorizontal="true"
        android:paddingBottom="7dip"
        android:dividerHeight="0px"
        android:divider="@null" />
    
    <ListView
        android:id="@+id/diary_listview2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/diary_btn_linearlayout"
        android:layout_centerHorizontal="true"
        android:paddingBottom="7dip"
        android:dividerHeight="0px"
        android:visibility="invisible"
        android:divider="@null" />
    
    <LinearLayout
        android:id="@+id/diary_btn_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >
        
        <ImageButton
	        android:id="@+id/diary_view_btn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@null"
	        android:src="@drawable/diary_show_diary_btn" />
        
        <ImageButton
	        android:id="@+id/calendar_view_btn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@null"
	        android:src="@drawable/diary_show_month_btn" />
    </LinearLayout>
    
</RelativeLayout>
