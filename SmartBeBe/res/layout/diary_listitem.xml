<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="7dip"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:padding="7dip"
        android:background="@drawable/bg_round_coner"
	    android:orientation="vertical" >
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dip"
	        android:layout_marginBottom="10dip"
	        android:orientation="horizontal">
	        
	        <TextView 
	            android:id="@+id/diary_title_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:textStyle="bold"
	            android:textSize="15sp"
	            android:textColor="#000000"
	            android:text="@string/default_string"/>
	        
	        <TextView
	            android:id="@+id/diary_time_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:gravity="right"
	            android:textColor="#aaaaaa"
	        	android:textSize="14sp"
	            android:text="@string/default_string"/>
	        
	        <ImageButton
	            android:id="@+id/diary_remove_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="3dip"
	            android:layout_marginRight="8dip"
	            android:layout_marginLeft="8dip"
	            android:src="@drawable/diary_remove_btn_50x50"
	            android:background="@null"/>
	    </LinearLayout>
	    
	    <TextView
	        android:id="@+id/diary_content_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="7dip"
	        android:singleLine="false"
	        android:maxLines="4"
	        android:ellipsize="end"
	        android:textColor="#000000"
	        android:textSize="14sp"
	        android:text="@string/default_long_string" />
	    
	    <LinearLayout
	        android:id="@+id/diary_linearImage"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginBottom="7dip" />
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <ImageButton 
	            android:id="@+id/diary_location_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="3dip"
	            android:focusable="false"
	            android:background="@drawable/diary_location_normal_99x99" />
	        
	        <ImageButton 
	            android:id="@+id/diary_vaccine_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="3dip"
	            android:focusable="false"
	            android:background="@drawable/diary_vaccine_normal_99x99" />
	        
	        <ImageButton 
	            android:id="@+id/diary_height_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="3dip"
	            android:focusable="false"
	            android:background="@drawable/diary_height_normal_99x99" />
	        
	        <ImageButton 
	            android:id="@+id/diary_weight_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:focusable="false"
	            android:background="@drawable/diary_weight_normal_99x99" />
	    </LinearLayout>
    </LinearLayout>

</LinearLayout>
