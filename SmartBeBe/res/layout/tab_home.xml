<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2cc" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:orientation="vertical" >
    
	    <RelativeLayout 
	        android:layout_marginTop="20dip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dip" >
	        
	        <ImageButton 
	            android:id="@+id/home_change_prev_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="3dip"
	            android:background="@drawable/prev_arrow" />
	        
	        <ImageButton 
	            android:id="@+id/home_photo_add_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:background="@drawable/photo_sample" />
	        
	        <ImageButton
	            android:id="@+id/home_change_next_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="3dip"
	            android:background="@drawable/next_arrow" />
	    </RelativeLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_marginBottom="10dip"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal">
	        
		    <TextView 
		        android:id="@+id/home_name_textview"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dip"
		        android:layout_gravity="center"
		        android:textSize="20sp"
		        android:textColor="#000000"
		        android:text="@string/sample_name" />
		    
		    <ImageView
		        android:id="@+id/home_gender_image"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@+id/home_name_textview"
		        android:src="@drawable/female_128x128" />
	    </LinearLayout>
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:layout_marginTop="5dip"
	        android:background="#cccccc" />
	    
	    <LinearLayout
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:orientation="vertical"
	        android:paddingTop="3dip"
	        android:background="#ffffff">
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:orientation="horizontal">
	            
	            <View
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_weight="5" />
	            
	            <RelativeLayout 
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_weight="2">
	            
		            <ImageView 
		                android:id="@+id/birthday_image"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/birthday" />
		            
		            <TextView
		                android:id="@+id/home_birthday_text"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_toRightOf="@+id/birthday_image"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="25dip"
		                android:textColor="#000000"
		                android:textSize="15sp"
		                android:text="1년 6개월" />
	            </RelativeLayout>
	        </LinearLayout>
	        
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1dip"
		        android:layout_marginTop="3dip"
		        android:layout_marginBottom="3dip"
	            android:background="#cccccc" />
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:orientation="horizontal">
	            
	            <View
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_weight="5" />
	            
	            <RelativeLayout 
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_weight="2">
	            
		            <ImageView 
		                android:id="@+id/height_image"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/baby_height" />
		            
		            <TextView
		                android:id="@+id/home_height_text"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_toRightOf="@+id/height_image"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="25dip"
		                android:textColor="#000000"
		                android:textSize="15sp"
		                android:text="99cm" />
	            </RelativeLayout>
	        </LinearLayout>
	        
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1dip"
		        android:layout_marginTop="3dip"
		        android:layout_marginBottom="3dip"
	            android:background="#cccccc" />
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:orientation="horizontal">
	            
	            <View
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_weight="5" />
	            
	            <RelativeLayout 
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_weight="2">
	            
		            <ImageView
		                android:id="@+id/weight_image"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/baby_weight" />
		            
		            <TextView
		                android:id="@+id/home_weight_text"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_toRightOf="@+id/weight_image"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="25dip"
		                android:textColor="#000000"
		                android:textSize="15sp"
		                android:text="17kg" />
	            </RelativeLayout>
	        </LinearLayout>
	        
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1dip"
		        android:layout_marginTop="3dip"
	            android:background="#cccccc" />
	        
	    </LinearLayout>
	</LinearLayout>
</ScrollView>
